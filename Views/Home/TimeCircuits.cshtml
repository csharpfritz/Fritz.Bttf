@{
	
	// Estimated release date from roadmap of ASP.NET 5 RTM
	var destTime = new DateTime(2016, 3, 30, 11, 0, 0, 0);
	
	var nowTime = DateTime.Now;

	// Date ASP.NET was first released
	var fromTime = new DateTime(2002, 1, 5, 10, 0, 0, 0);
	
}

@functions{
	
	public HtmlString Format(string num) {
		
		return new HtmlString(num.Replace("1", "&nbsp;1"));
		
	}
	
}


	<div id="timeCircuits">
		
		<div class="timeRow">
		<!-- DESTINATION -->		
			<div class="row">
				<div class="col-sm-3"><span class="lbl">Month</span></div>
				<div class="col-sm-1"><span class="lbl">Day</span></div>
				<div class="col-sm-3"><span class="lbl">Year</span></div>
				<div class="col-sm-1"><span class="lbl">PM</span></div>
				<div class="col-sm-2"><span class="lbl">Hour</span></div>
				<div class="col-sm-2"><span class="lbl">Min</span></div>
			</div>

			<div class="row">
				<div class="col-sm-3">
					<span class="month">
						<i class="digit dest bg">888</i>
						<i class="digit dest">@destTime.ToString("MMM").Substring(0,3)</i>
					</span>
				</div>
				
				<div class="col-sm-1">
					<span class="day">
						<i class="digit dest bg">88</i>
						<i class="digit dest">@Format(destTime.ToString("dd"))</i>
					</span>
				</div>
				
				<div class="col-sm-3">
					<span class="year">
						<i class="digit dest bg">8888</i>
						<i class="digit dest">@Format(destTime.ToString("yyyy"))</i>
					</span>
				</div>
				
				<div class="col-sm-1">
					<span class="pm"></span>
				</div>
				
				
				<div class="col-sm-2">
					<span class="hour">
						<i class="digit dest bg">88</i>
						<i class="digit dest">@Format(destTime.ToString("hh"))</i>
					</span>
				</div>
				
				<div class="col-sm-2">
					<span class="min">
						<i class="digit dest bg">88</i>
						<i class="digit dest">@Format(destTime.ToString("mm"))</i>
					</span>
				</div>
				
			</div>
			
			<div class="row">
				<div class="col-sm-12 timeId">
					destination time	
				</div>
				
			</div>

		</div>

		<div class="row"><br/></div>

		<div class="timeRow">
		<!-- PRESENT -->		
			<div class="row">
				<div class="col-sm-3"><span class="lbl">Month</span></div>
				<div class="col-sm-1"><span class="lbl">Day</span></div>
				<div class="col-sm-3"><span class="lbl">Year</span></div>
				<div class="col-sm-1"><span class="lbl">PM</span></div>
				<div class="col-sm-2"><span class="lbl">Hour</span></div>
				<div class="col-sm-2"><span class="lbl">Min</span></div>
			</div>
			
			<div class="row">
				<div class="col-sm-3">
					<span class="month">
						<i class="digit now bg">888</i>
						<i class="digit now">@nowTime.ToString("MMM").Substring(0,3)</i>
					</span>
				</div>
				
				<div class="col-sm-1">
